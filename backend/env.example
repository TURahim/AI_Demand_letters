# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/steno_dev?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=steno-dev
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS S3 (created buckets: steno-dev-docs-971422717446, steno-dev-exports-971422717446)
S3_BUCKET_NAME=steno-dev-docs-971422717446
S3_UPLOADS_PREFIX=uploads/
S3_LETTERS_PREFIX=letters/

# AWS Bedrock
# Use inference profile ARN instead of direct model ID for Claude 3.5 Sonnet v2
# us-east-1 cross-region inference profile for Claude 3.5 Sonnet v2:
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# AWS Secrets Manager
SECRETS_MANAGER_ENABLED=false
SECRETS_PREFIX=steno/dev

# AWS KMS (for encryption)
KMS_KEY_ID=your-kms-key-id
ENCRYPTION_ENABLED=true

# Redis (for caching and job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
CLOUDWATCH_ENABLED=false

# OCR
OCR_PROVIDER=textract
TESSERACT_PATH=/usr/bin/tesseract

# Antivirus
ANTIVIRUS_ENABLED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# WebSocket
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AI_GENERATION=true
ENABLE_ANALYTICS=true

