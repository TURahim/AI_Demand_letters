# Server Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Database (will be set from Secrets Manager)
DATABASE_URL=__SECRET__

# JWT (will be set from Secrets Manager)
JWT_SECRET=__SECRET__
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=__SECRET__
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
# AWS credentials will be provided by IAM role, not environment variables

# AWS S3
S3_BUCKET_NAME=steno-prod-docs-971422717446
S3_UPLOADS_PREFIX=uploads/
S3_LETTERS_PREFIX=letters/

# AWS Bedrock
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# AWS Secrets Manager
SECRETS_MANAGER_ENABLED=true
SECRETS_PREFIX=steno/prod

# AWS KMS
KMS_KEY_ID=__WILL_BE_CREATED__
ENCRYPTION_ENABLED=true

# Redis (ElastiCache endpoint)
REDIS_HOST=__ELASTICACHE_ENDPOINT__
REDIS_PORT=6379
REDIS_PASSWORD=__SECRET__
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=https://app.steno.ai,https://steno.ai
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Monitoring
SENTRY_DSN=__OPTIONAL__
SENTRY_ENVIRONMENT=production
CLOUDWATCH_ENABLED=true

# OCR
OCR_PROVIDER=textract

# Antivirus
ANTIVIRUS_ENABLED=false

# WebSocket
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=https://app.steno.ai

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AI_GENERATION=true
ENABLE_ANALYTICS=true

